// H√†m t√≠nh FPS ∆∞·ªõc t√≠nh cho m·ªôt game c·ª• th·ªÉ
function calculateEstimatedFPS(gameId, cpuScore, gpuScore) {
    if (!gameId || !cpuScore || !gpuScore) {
        return { fps: 0, quality: 'N/A', resolution: 'N/A' };
    }
    
    // L·∫•y th√¥ng tin game
    const gameType = getGameType(gameId);
    
    // C√¢n b·∫±ng CPU v√† GPU d·ª±a v√†o lo·∫°i game
    let cpuWeight = 0.3;
    let gpuWeight = 0.7;
    
    if (gameType === 'esports') {
        cpuWeight = 0.6;
        gpuWeight = 0.4;
    } else if (gameType === 'strategy') {
        cpuWeight = 0.5;
        gpuWeight = 0.5;
    } else if (gameType === 'aaa') {
        cpuWeight = 0.2;
        gpuWeight = 0.8;
    }
    
    // T√≠nh to√°n ƒëi·ªÉm t·ªïng h·ª£p
    const combinedScore = (cpuScore * cpuWeight) + (gpuScore * gpuWeight);
    
    // ∆Ø·ªõc t√≠nh FPS d·ª±a v√†o ƒëi·ªÉm t·ªïng h·ª£p v√† lo·∫°i game
    let baseFps = 0;
    let quality = 'Th·∫•p';
    let resolution = '1080p';
    
    if (gameType === 'esports') {
        // Esports games th∆∞·ªùng ch·∫°y ·ªü FPS cao h∆°n
        baseFps = combinedScore * 3;
        
        if (combinedScore >= 85) {
            quality = 'Ultra';
            resolution = '1440p';
        } else if (combinedScore >= 70) {
            quality = 'Cao';
            resolution = '1080p';
        } else if (combinedScore >= 50) {
            quality = 'Trung b√¨nh';
            resolution = '1080p';
        } else {
            quality = 'Th·∫•p';
            resolution = '1080p';
        }
    } else if (gameType === 'aaa') {
        // AAA games th∆∞·ªùng ƒë√≤i h·ªèi nhi·ªÅu t√†i nguy√™n h∆°n
        baseFps = combinedScore * 1.2;
        
        if (combinedScore >= 90) {
            quality = 'Ultra';
            resolution = '4K';
        } else if (combinedScore >= 80) {
            quality = 'Ultra';
            resolution = '1440p';
        } else if (combinedScore >= 70) {
            quality = 'Cao';
            resolution = '1440p';
        } else if (combinedScore >= 60) {
            quality = 'Cao';
            resolution = '1080p';
        } else if (combinedScore >= 50) {
            quality = 'Trung b√¨nh';
            resolution = '1080p';
        } else {
            quality = 'Th·∫•p';
            resolution = '1080p';
        }
    } else {
        // C√°c game kh√°c
        baseFps = combinedScore * 1.5;
        
        if (combinedScore >= 85) {
            quality = 'Ultra';
            resolution = '1440p';
        } else if (combinedScore >= 70) {
            quality = 'Cao';
            resolution = '1080p';
        } else if (combinedScore >= 55) {
            quality = 'Trung b√¨nh';
            resolution = '1080p';
        } else {
            quality = 'Th·∫•p';
            resolution = '1080p';
        }
    }
    
    // L√†m tr√≤n FPS
    const fps = Math.round(baseFps);
    
    return { fps, quality, resolution };
}

