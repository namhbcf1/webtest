function calculateGamePerformance(cpuScore, gpuScore) {
    if (!cpuScore || !gpuScore) return 0;
    
    const weightedCPU = cpuScore * 0.4;
    const weightedGPU = gpuScore * 0.6;
    const totalScore = weightedCPU + weightedGPU;
    
    return Math.min(Math.round(totalScore), 100);
}

// H√†m t√≠nh hi·ªáu nƒÉng ƒë·ªì h·ªça
function calculateGraphicsPerformance(cpuScore, gpuScore) {
    if (!cpuScore || !gpuScore || isNaN(cpuScore) || isNaN(gpuScore)) {
        return 0;
    }
    
    // Tr·ªçng s·ªë cho CPU v√† GPU trong ƒë·ªì h·ªça
    const cpuWeight = 0.3;
    const gpuWeight = 0.7;
    
    // T√≠nh ƒëi·ªÉm ƒë·ªì h·ªça
    const graphicsScore = (cpuScore * cpuWeight + gpuScore * gpuWeight);
    
    // √Åp d·ª•ng h·ªá s·ªë ƒëi·ªÅu ch·ªânh phi tuy·∫øn
    const adjustedScore = Math.pow(graphicsScore / 100, 0.95) * 100;
    
    return Math.round(Math.min(100, adjustedScore));
}

// H√†m t√≠nh hi·ªáu nƒÉng vƒÉn ph√≤ng
function calculateOfficePerformance(cpuScore, gpuScore) {
    if (!cpuScore || !gpuScore || isNaN(cpuScore) || isNaN(gpuScore)) {
        return 0;
    }
    
    // Tr·ªçng s·ªë cho CPU v√† GPU trong vƒÉn ph√≤ng
    const cpuWeight = 0.8;
    const gpuWeight = 0.2;
    
    // T√≠nh ƒëi·ªÉm vƒÉn ph√≤ng
    const officeScore = (cpuScore * cpuWeight + gpuScore * gpuWeight);
    
    // √Åp d·ª•ng ng∆∞·ª°ng t·ªëi thi·ªÉu
    const minScore = 50; // ƒêi·ªÉm t·ªëi thi·ªÉu cho vƒÉn ph√≤ng
    
    return Math.round(Math.max(minScore, Math.min(100, officeScore)));
}

// H√†m t√≠nh bottleneck
function calculateBottleneck(cpuScore, gpuScore) {
    if (!cpuScore || !gpuScore || isNaN(cpuScore) || isNaN(gpuScore)) {
        return { percentage: 0, isCpuBottleneck: false };
    }
    
    const maxScore = Math.max(cpuScore, gpuScore);
    const minScore = Math.min(cpuScore, gpuScore);
    
    // T√≠nh ph·∫ßn trƒÉm bottleneck
    const bottleneckPercentage = ((maxScore - minScore) / maxScore) * 100;
    
    // X√°c ƒë·ªãnh th√†nh ph·∫ßn g√¢y bottleneck
    const isCpuBottleneck = cpuScore < gpuScore;
    
    return {
        percentage: Math.round(bottleneckPercentage),
        isCpuBottleneck: isCpuBottleneck
    };
}

